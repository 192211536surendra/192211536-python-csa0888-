   def get_season(month, day):
    if (month == "January" or month == "February" or (month == "March" and day < 20)) or (month == "April" or month == "May") or (month == "June" and day < 21):
        return "Winter"
    elif (month == "March" and day >= 20) or (month == "April" or month == "May") or (month == "June" and day >= 21) or (month == "July" or month == "August"):
        return "Spring"
    elif (month == "September" and day >= 22) or (month == "October" or month == "November") or (month == "December" and day < 21):
        return "Fall"
    else:
        return "Summer"

# Get user input
month = input("Enter the month: ").capitalize()
day = int(input("Enter the date: "))

# Get and display the season
season = get_season(month, day)
print("The season is currently", season)
